

.mat-toolbar.mat-primary
  background-color #293133

border-radius()
  -webkit-border-radius arguments
  -moz-border-radius arguments
  border-radius arguments

.fill-remaining-space
  flex 1 1 auto

.header-icons
  text-align center
  font-size 48px

.title
  font-family: 'Kaushan Script', cursive
  font-size 48px
  color: white
  text-decoration: none

.login-icon
  overflow hidden
  background-color white
  color #293133
  border-radius 50%
  width 50px
  height 50px
  border 2px solid white
  transition-duration .5s

.profile-image
  transition-duration .5s
.profile-image:hover
  transition-duration .5s
  transform scale(1.1)

.share-icon
  overflow hidden
  transition-duration .5s
.share-icon:hover
  transform rotate( -11deg )
  transition-duration .5s

.inlay-wrapper
  height 85vh
